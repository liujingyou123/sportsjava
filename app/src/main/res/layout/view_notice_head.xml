<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="22dp"
        android:background="@drawable/bg_black_round_circle_2"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp">

        <ImageView
            android:id="@+id/imv_close"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_share_cancel"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_close"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="点击发现更多，去寻找更多小伙伴。"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_below="@id/tv_tip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:background="@drawable/bg_btn_green"
            android:gravity="center"
            android:text="发现更多"
            android:textColor="@color/color_text_green"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:text="为你推荐"
        android:textColor="#FFA5A4A4"
        android:textSize="12sp"
        android:visibility="gone"/>
</LinearLayout>