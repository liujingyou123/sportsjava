<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/bg_title"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_focus_house_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_back" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/color_gray_white_s"
                android:textSize="16sp"
                android:text="通知"/>
            <ImageView
                android:id="@+id/imv_notice_tip"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/bg_red_six"
                android:layout_toRightOf="@id/tv_notice"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_hudong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/color_gray_white_s"
                android:textSize="16sp"
                android:text="互动"
                android:layout_toRightOf="@id/tv_notice"
                android:layout_marginLeft="60dp"/>
            <ImageView
                android:id="@+id/imv_hudong_tip"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/bg_red_six"
                android:layout_toRightOf="@id/tv_hudong"
                android:visibility="gone"/>
        </RelativeLayout>

        <View
            style="@style/view_line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>