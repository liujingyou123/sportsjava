<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_ticket_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text=""
        android:textColor="#FFFFFFFF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_ticket_nums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ticket_des"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:text="购买数量"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp" />

    <com.sports.limitsport.view.NumCheckView
        android:id="@+id/ncv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ticket_nums"
        android:layout_margin="10dp"></com.sports.limitsport.view.NumCheckView>

</RelativeLayout>