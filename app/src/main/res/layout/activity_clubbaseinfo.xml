<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/bg">

        <View style="@style/view_line" />

        <TextView
            android:id="@+id/btn_done"
            style="@style/bt_done"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="申请加入" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom"
        android:background="@color/bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/imv_cover"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imv_focus_house_back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/icon_back" />


                    <ImageView
                        android:id="@+id/imv_report"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@mipmap/icon_nav_tipoff" />

                    <ImageView
                        android:id="@+id/imv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@id/imv_report"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/icon_nav_share" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_black_round_circle"
                    android:layout_marginTop="220dp">

                    <TextView
                        android:id="@+id/tv_club_tip"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_tv_white_circle"
                        android:gravity="center"
                        android:text="G"
                        android:textColor="#FF000000"
                        android:textSize="22sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_club_tip"
                        android:layout_alignRight="@id/tv_club_tip"
                        android:layout_marginTop="15dp"
                        android:src="@mipmap/icon_company_certification" />

                    <TextView
                        android:id="@+id/tv_club_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_club_tip"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="南山滑雪俱乐部"
                        android:textColor="#FFFFFFFF"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/ll_members"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_club_name"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp">

                        <com.sports.limitsport.view.CreatPersonView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></com.sports.limitsport.view.CreatPersonView>

                        <com.sports.limitsport.view.CreatPersonView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"></com.sports.limitsport.view.CreatPersonView>

                        <com.sports.limitsport.view.CreatPersonView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"></com.sports.limitsport.view.CreatPersonView>
                        <LinearLayout
                            android:id="@+id/ll_members_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_club_name"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            android:visibility="gone">

                            <com.sports.limitsport.view.CreatPersonView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"></com.sports.limitsport.view.CreatPersonView>

                            <com.sports.limitsport.view.CreatPersonView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"></com.sports.limitsport.view.CreatPersonView>

                            <com.sports.limitsport.view.CreatPersonView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"></com.sports.limitsport.view.CreatPersonView>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="更多管理者"
                            android:textColor="#FFFFFFFF"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_gravity="center_horizontal"
                            android:drawableRight="@drawable/bg_tv_more"
                            android:drawablePadding="4dp"/>
                    </LinearLayout>


                </RelativeLayout>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本信息"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@mipmap/icon_clubxiangqing_basicinformation"
                android:drawablePadding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="俱乐部类型 : 滑雪俱乐部"
                android:textColor="#FFA5A4A4"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京航天爱斯诺冰雪科技有限公司,是一家集室内专业滑雪训练设备研发,制造;滑雪培训,滑雪俱乐部运营于一体的滑雪高科技企业,欢迎来电咨询合作洽谈."
                android:textColor="#FFA5A4A4"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
