<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imv_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/imv_head"
        android:singleLine="true"
        android:text="路过的一直"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="2dp"
        android:maxLines="2"
        android:text="1天前"
        android:textColor="#999999"
        android:textSize="14sp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn_green"
        android:gravity="center"
        android:text="+关注"
        android:textColor="@color/color_text_green"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imv_cover"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/imv_head"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imv_cover"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="如果有天堂，应该是这样的，做最棒的自己"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_des2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_des"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="#最完美的自己#"
        android:textColor="@color/color_text_green"
        android:textSize="16sp" />

    <com.sports.limitsport.view.tagview.TagCloudLayout
        android:id="@+id/tg_join_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_des2"
        android:layout_marginLeft="10dp"
        app:lineSpacing="5dp"
        app:tagSpacing="5dp"></com.sports.limitsport.view.tagview.TagCloudLayout>

    <TextView
        android:id="@+id/tv_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tg_join_act"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="1234"
        android:textColor="@color/color_s_green"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imv_msg"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignTop="@id/tv_zan"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/tv_zan"
        android:background="#fff000" />

    <ImageView
        android:id="@+id/imv_share"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignTop="@id/tv_zan"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/imv_msg"
        android:background="#fff000" />

    <LinearLayout
        android:id="@+id/ll_recallone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imv_share"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_recalltwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_recallone"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

    </LinearLayout>


    <TextView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_recallone"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="查看全部5条回复 >"
        android:textColor="#999999"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>