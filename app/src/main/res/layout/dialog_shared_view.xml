<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9111111">

    <ImageView
        android:id="@+id/imv_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_share_cancel"
        android:scaleType="centerInside"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/imv_close">
        <TextView
            android:id="@+id/tv_weixin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textSize="13sp"
            android:textColor="#999999"
            android:gravity="center"
            android:drawableTop="@mipmap/icon_share_wechat"
            android:drawablePadding="8dp" />
        <TextView
            android:id="@+id/tv_pengyou"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="朋友圈"
            android:textSize="13sp"
            android:textColor="#999999"
            android:gravity="center"
            android:drawableTop="@mipmap/icon_share_moments"
            android:drawablePadding="8dp" />
        <TextView
            android:id="@+id/tv_weibo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="新浪微博"
            android:textSize="13sp"
            android:textColor="#999999"
            android:gravity="center"
            android:drawableTop="@mipmap/icon_share_weibo"
            android:drawablePadding="8dp" />
        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:textSize="13sp"
            android:textColor="#999999"
            android:gravity="center"
            android:drawableTop="@mipmap/icon_share_qq"
            android:drawablePadding="8dp" />
    </LinearLayout>
</RelativeLayout>