<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="6dp"
    android:background="@drawable/bg_black_round_circle">

    <TextView
        android:id="@+id/tv_ordernum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="订单编号：123456789"
        android:textColor="#A5A4A4"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_ordernum"
        android:layout_marginRight="15dp"
        android:text="待支付"
        android:textColor="#FF4795FB"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imv_cover"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@id/tv_ordernum"
        android:layout_below="@id/tv_ordernum"
        android:layout_marginTop="17dp" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imv_cover"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/imv_cover"
        android:maxLines="2"
        android:text="南山俱乐部 大云山潜水第九期"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_ticket_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imv_cover"
        android:layout_alignLeft="@id/tv_name"
        android:layout_marginBottom="3dp"
        android:text="金额：1500 元 （2张）"
        android:textColor="#A5A4A4"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_ticket_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_ticket_price"
        android:layout_alignLeft="@id/tv_name"
        android:layout_marginBottom="2dp"
        android:text="票务类型：标准票"
        android:textColor="#A5A4A4"
        android:textSize="12sp" />

    <View
        android:id="@+id/view_line"
        style="@style/view_line"
        android:layout_below="@id/imv_cover"
        android:layout_marginTop="10dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_line"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_all_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="合计："
            android:textColor="#A5A4A4"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/tv_all_tip"
            android:text="￥3000"
            android:textColor="#FFFFFFFF"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_done"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="付款59:33"
            android:textColor="#FFFFFFFF"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>