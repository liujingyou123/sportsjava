<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/imv_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_tv_white_circle"
            android:gravity="center"
            android:text="G"
            android:textColor="#FF000000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imv_head"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/imv_head"
            android:singleLine="true"
            android:text="路过的一直"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_focus"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_btn_selector"
            android:gravity="center"
            android:text="+关注"
            android:textColor="@color/color_btn_selector"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@id/tv_name"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@id/tv_focus"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="1天前"
            android:textColor="#FFA5A4A4"
            android:textSize="10sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/imv_head"
        android:singleLine="true"
        android:text="大牛教你如何迈出滑雪第一步！"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imv_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="如果有天堂，应该是个岛的模样；如果有天堂，应该是个岛。"
        android:textColor="#FFA5A4A4"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:text="'@lover_ss'"
        android:textColor="#FF4795FB"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imv_zan"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_weidianzan" />

        <TextView
            android:id="@+id/tv_san"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/imv_zan"
            android:gravity="center_vertical"
            android:text="1,234"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imv_pinglun"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_san"
            android:src="@mipmap/icon_replay" />

        <ImageView
            android:id="@+id/imv_share"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imv_pinglun"
            android:src="@mipmap/icon_dongtai_share" />

        <ImageView
            android:id="@+id/imv_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_dongtai_tipoff" />
    </RelativeLayout>
    <View
        style="@style/view_line"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/icon_bg_note"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:text="他们也觉得赞"
        android:textColor="#FFFFFFFF"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/ll_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sign_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_circle_green"
            android:gravity="center"
            android:text="1,234"
            android:textColor="#ffffff"
            android:textSize="10sp" />
    </LinearLayout>

    <View
        style="@style/view_line"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@mipmap/icon_replay"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:text="全部评论（19条）"
        android:textColor="#FFFFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="15dp"/>
</LinearLayout>