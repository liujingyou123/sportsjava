<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/view_title"
        layout="@layout/common_title" />


    <ImageView
        android:id="@+id/imv_cover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/view_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imv_cover"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imv_cover"
        android:text="南山俱乐部 大云山潜水第九期"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/imv_cover"
        android:text="请选择票务类型和购买数量"
        android:textColor="#aaaaaa"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_ticket_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imv_cover"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:text="票务类型"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_ticket_type"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/tv_ticket_type"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ticket_type_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_ticket_type"
            android:gravity="center"
            android:text="1500\n标准票"
            android:textColor="@color/color_s_green"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_ticket_type_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_ticket_type"
            android:gravity="center"
            android:text="1500\n家庭票"
            android:textColor="@color/color_s_green"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ticket_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_ticket_type"
        android:layout_below="@id/ll_ticket_type"
        android:text="注：包含"
        android:textColor="#aaaaaa"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_ticket_nums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ticket_des"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:text="购买数量"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.sports.limitsport.view.NumCheckView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ticket_nums"
        android:layout_margin="10dp"></com.sports.limitsport.view.NumCheckView>
</RelativeLayout>