<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="142.5dp"
    android:background="#ffffff"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="horizontal">

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/wp_year"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        aigestudio:wheel_atmospheric="true"
        aigestudio:wheel_curved="true"
        aigestudio:wheel_item_text_color="#aeaeae"
        aigestudio:wheel_item_text_size="15sp"
        aigestudio:wheel_selected_item_text_color="#333333"
        />

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/wp_month"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        aigestudio:wheel_atmospheric="true"
        aigestudio:wheel_curved="true"
        aigestudio:wheel_item_text_color="#aeaeae"
        aigestudio:wheel_item_text_size="15sp"
        aigestudio:wheel_selected_item_text_color="#333333"
        />

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/wp_day"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        aigestudio:wheel_atmospheric="true"
        aigestudio:wheel_curved="true"
        aigestudio:wheel_item_text_color="#aeaeae"
        aigestudio:wheel_item_text_size="15sp"
        aigestudio:wheel_selected_item_text_color="#333333"
        />

</LinearLayout>